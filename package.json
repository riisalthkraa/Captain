{
  "name": "captaine-app",
  "productName": "Cap'taine",
  "version": "1.8.0",
  "description": "Un assistant éducatif intelligent pour les élèves du CP à la 3ème",
  "main": "dist-electron/main.js",
  "author": {
    "name": "VIEY David",
    "email": "Riisalthkraal@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/riisalthkraa/Captain-DEV",
  "repository": {
    "type": "git",
    "url": "https://github.com/riisalthkraa/Captain-DEV.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "tsc && vite build && electron-builder",
    "package:win": "npm run build && electron-builder --win --x64",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder -mwl",
    "docs:generate": "typedoc",
    "test": "echo \"Tests à implémenter\"",
    "test:ci": "echo \"Tests CI\"",
    "test:report": "node scripts/generate-test-report.js",
    "website:generate": "node scripts/generate-website-content.js",
    "lint": "echo \"Linter à configurer\"",
    "icons:generate": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "canvas-confetti": "^1.9.2",
    "clsx": "^2.1.0",
    "dexie": "^3.2.7",
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.363.0",
    "pdf-parse": "^1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "tesseract.js": "^5.0.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^29.1.6",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "png-to-ico": "^3.0.1",
    "png2icons": "^2.0.1",
    "postcss": "^8.4.38",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.3",
    "to-ico": "^1.1.5",
    "typedoc": "^0.28.14",
    "typescript": "^5.4.3",
    "vite": "^5.2.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.captaine.app",
    "productName": "Cap'taine",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "Captaine-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cap'taine"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.education",
      "artifactName": "Captaine-${version}-${arch}.${ext}"
    },
    "dmg": {
      "title": "Cap'taine ${version}",
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Education",
      "artifactName": "Captaine-${version}-${arch}.${ext}"
    }
  }
}
